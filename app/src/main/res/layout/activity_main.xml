<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kalkulator BMI"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umur"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_input_umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="input umur"
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/grey"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tinggi Badan"
                android:textSize="15sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_input_tinggi_badan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:hint="input tinggi badan"
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/grey"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berst Badan"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_input_berat_badan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="input berat badan"
                android:inputType="numberDecimal"
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/grey"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/red"/>

    <Button
        android:id="@+id/btn_pass_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="passing data with Intent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btn_pass_bundle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="passing data with bundle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btn_pass_serializable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="passing data serializable"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btn_pass_parcelable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="passing data parcelable"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


</LinearLayout>